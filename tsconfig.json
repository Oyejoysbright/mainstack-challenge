{
  "compileOnSave": true,
  "include": [
    "src/**/*"],
  "typeAcquisition": {
      "include": [
          "jest"
      ]
  },
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,     
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["__tests__", "build", "node_modules", "coverage"]
}